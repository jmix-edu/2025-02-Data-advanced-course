<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://taskDetailView.title"
      focusComponent="form">
    <data>
        <instance id="taskDc"
                  class="com.company.projectmanagementdata.entity.Task">
            <fetchPlan>
                <property name="assignee" fetchPlan="_instance_name"/>
                <property name="project" fetchPlan="_base"/>
                <property name="name"/>
                <property name="label"/>
                <property name="closed"/>
                <property name="startDate"/>
                <property name="estimatedEfforts"/>
            </fetchPlan>
            <loader id="taskDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="taskDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <entityPicker id="assigneeField" property="assignee">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <dateTimePicker id="startDateField" property="startDate"/>
            <textField id="estimatedEffortsField" property="estimatedEfforts"/>
            <comboBox id="labelField" property="label"/>
            <entityPicker id="projectField" property="project">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
